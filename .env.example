# Environment Variables for Startup Outreach Bot
# Copy this to .env and update with your actual credentials
# NEVER commit .env to git - it's in .gitignore

# Brevo SMTP Configuration
BREVO_SMTP_USERNAME=your-brevo-username@smtp-brevo.com
BREVO_SMTP_PASSWORD=your-brevo-master-password

# Email Settings
FROM_EMAIL=team@open.build

# Optional: Search API Keys
GOOGLE_API_KEY=your-google-api-key
GOOGLE_CSE_ID=your-custom-search-engine-id
BING_API_KEY=your-bing-api-key

# Optional: AI Integration
OPENAI_API_KEY=your-openai-api-key

# Optional: Social Media APIs
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# Notification Settings (for daily review reminders)
PUSHOVER_USER_KEY=your-pushover-user-key
PUSHOVER_API_TOKEN=your-pushover-api-token
